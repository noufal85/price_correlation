# Stock Clustering Pipeline - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Data Source API Keys
# =============================================================================

# Financial Modeling Prep API Key (required for FMP data source and web interface)
# Get your free key at: https://financialmodelingprep.com/developer
FMP_API_KEY=your_fmp_api_key_here

# =============================================================================
# Redis Cache Configuration
# =============================================================================

# Redis host (default: 192.168.68.88)
REDIS_HOST=192.168.68.88

# Redis port (default: 6379)
REDIS_PORT=6379

# Redis database number (default: 0)
REDIS_DB=0

# Redis password (leave empty if no password)
REDIS_PASSWORD=

# =============================================================================
# TimescaleDB Configuration
# =============================================================================

# TimescaleDB host (default: 192.168.68.88)
TIMESCALE_HOST=192.168.68.88

# TimescaleDB port (default: 5432)
TIMESCALE_PORT=5432

# TimescaleDB database name (default: timescaledb)
TIMESCALE_DB=timescaledb

# TimescaleDB username (default: postgres)
TIMESCALE_USER=postgres

# TimescaleDB password (default: password)
TIMESCALE_PASSWORD=password

# =============================================================================
# Feature Toggles
# =============================================================================

# Enable Redis caching (true/false, default: true)
# When enabled, price data and universe are cached to avoid repeated API calls
ENABLE_CACHE=true

# Enable TimescaleDB export (true/false, default: true)
# When enabled, clustering results are automatically exported to TimescaleDB
ENABLE_DB_EXPORT=true

# =============================================================================
# Web Server Configuration
# =============================================================================

# Web server host (default: 0.0.0.0 for all interfaces)
WEB_HOST=0.0.0.0

# Web server port (default: 5000)
WEB_PORT=5000

# Enable Flask debug mode (true/false, default: false)
# WARNING: Never enable in production
WEB_DEBUG=false
